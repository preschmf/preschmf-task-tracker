{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "build",
    "strict": true,
    "lib": ["es2019"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "strictPropertyInitialization": false,
    "paths": {
      "lib/*": ["lib/*"]
    }
  }
}
