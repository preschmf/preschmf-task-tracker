{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "es6",
    "outDir": "build",
    "strict": true,
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "strictPropertyInitialization": false,
    "paths": {
      "lib/*": ["lib/*"]
    },
    "allowJs": true,
    "noImplicitAny": false
  }
}
